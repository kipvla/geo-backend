{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@controller": ["./controllers"],
      "@models": ["./models"],
      "@middleware": ["./middleware"],
      "*": ["node_modules/*"]
    }
  },
  "include": ["**/*"]
}
